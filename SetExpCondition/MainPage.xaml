<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SetExpCondition.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,10"
            Spacing="25"
            HorizontalOptions="Fill">

            <!-- <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot logo" /> -->

            <Label
                Text="保存先フォルダのパスを指定してください"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                HorizontalOptions="Center" />
            
            
            <!-- テキストボックスを追加 -->
            <Entry
                x:Name="FolderPathEntry"
                Placeholder="フォルダパスを入力してください"
                HorizontalOptions="Fill"
                FontSize="18" />

            <Button
                x:Name="SelectFolderBtn"
                Text="保存先確定"
                FontSize="18" 
                SemanticProperties.Hint="フォルダを選択します"
                Clicked="OnSelectFolderClicked"
                HorizontalOptions="Fill" />
            
            <!-- 入力内容を表示するラベル -->
            <Label
                x:Name="DisplayLabel"
                Text="入力されたパスがここに表示されます"
                HorizontalOptions="Fill"
                HorizontalTextAlignment="Center"
                FontSize="18"/>

            <Label
                Text="実験条件"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                HorizontalOptions="Center" />
                
            <HorizontalStackLayout Spacing="20" HorizontalOptions="Center">
                <Button
                    x:Name="ConditionBtn1"
                    Text="条件1"
                    FontSize="18"
                    SemanticProperties.Hint="設定を保存します"
                    Clicked="OnSaveClicked"
                    HeightRequest="100"
                    WidthRequest="100"/>
                <Button
                    x:Name="ConditionBtn2"
                    Text="条件2"
                    FontSize="18"
                    SemanticProperties.Hint="設定を保存します"
                    Clicked="OnSaveClicked"
                    HeightRequest="100"
                    WidthRequest="100"/>
                <Button
                    x:Name="ConditionBtn3"
                    Text="条件3"
                    FontSize="18"
                    SemanticProperties.Hint="設定を保存します"
                    Clicked="OnSaveClicked"
                    HeightRequest="100"
                    WidthRequest="100"/>
                <Button
                    x:Name="ConditionBtn4"
                    Text="条件4"
                    FontSize="18"
                    SemanticProperties.Hint="設定を保存します"
                    Clicked="OnSaveClicked"
                    HeightRequest="100"
                    WidthRequest="100"/>
                <Button
                    x:Name="ConditionBtn5"
                    Text="条件5"
                    FontSize="18"
                    SemanticProperties.Hint="設定を保存します"
                    Clicked="OnSaveClicked"
                    HeightRequest="100"
                    WidthRequest="100"/>
                <Button
                    x:Name="ConditionBtn6"
                    Text="条件6"
                    FontSize="18"
                    SemanticProperties.Hint="設定を保存します"
                    Clicked="OnSaveClicked"
                    HeightRequest="100"
                    WidthRequest="100"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
