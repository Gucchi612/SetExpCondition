<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SetExpCondition.Controls.ConditionButton"
             x:Name="root"
             Padding="4">

    <!-- 見た目をボタン風にする Frame を使用 -->
    <Frame x:Name="InnerFrame"
           CornerRadius="8"
           Padding="8"
           HasShadow="False"
           WidthRequest="160"
           HeightRequest="120"
           BackgroundColor="LightGray"
           HorizontalOptions="Center"
           VerticalOptions="Start">
        <Frame.GestureRecognizers>
            <TapGestureRecognizer Tapped="OnFrameTapped" />
        </Frame.GestureRecognizers>

        <VerticalStackLayout Spacing="6" HorizontalOptions="Center" VerticalOptions="Center">
            <!-- 上行: 要因1 -->
            <Label x:Name="TopLabel"
                   Text="{Binding Factor1, Source={x:Reference root}}"
                   FontSize="14"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="TailTruncation"
                   MaxLines="1"
                   TextColor="Black" />

            <!-- 中央: （必要なら Name を表示。不要なら空に） -->
            <Label x:Name="CenterLabel"
                   Text="{}"
                   FontSize="14"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="TailTruncation"
                   MaxLines="1"
                   TextColor="Black" />

            <!-- 下行: 要因2 -->
            <Label x:Name="BottomLabel"
                   Text="{Binding Factor2, Source={x:Reference root}}"
                   FontSize="14"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"
                   LineBreakMode="TailTruncation"
                   MaxLines="1"
                   TextColor="Black" />
        </VerticalStackLayout>
    </Frame>
</ContentView>

